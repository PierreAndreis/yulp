{
  "name": "toptal-exercise-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "db:save": "dotenv -- yarn prisma migrate save",
    "db:migrate": "dotenv -- yarn prisma migrate dev",
    "db:deploy": "dotenv -- yarn prisma migrate prod",
    "db:generate": "dotenv -- yarn prisma generate",
    "clean": "rimraf dist",
    "prebuild": "yarn clean && yarn db:generate",
    "build": "cross-env NODE_ENV=production tsc ",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "start": "cross-env NODE_ENV=production node dist/index.js"
  },
  "dependencies": {
    "@prisma/client": "^2.21.2",
    "@toptalexercise/common": "^1.0.0",
    "@types/http-errors": "^1.8.0",
    "@types/jsonwebtoken": "^8.5.1",
    "bcryptjs": "^2.4.3",
    "celebrate": "^14.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^4.5.0",
    "http-errors": "^1.8.0",
    "jose": "1.28.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "prisma": "^2.21.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.41",
    "@types/react": "^17.0.3",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  }
}
